<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Lightning Calendar</masterLabel>
    <description>Production-ready calendar component with month, week, and day views</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="defaultView" type="String" default="month" datasource="month,week,day,list" label="Default View" description="Initial calendar view to display"/>
            <property name="timezone" type="String" default="America/New_York" label="Timezone" description="Display timezone for events"/>
            <property name="height" type="Integer" default="600" label="Height (px)" description="Calendar height in pixels"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
