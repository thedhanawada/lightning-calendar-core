{
  "name": "lightning-calendar-core",
  "version": "0.1.0",
  "private": false,
  "description": "A modern, lightweight, framework-agnostic calendar engine optimized for Salesforce Lightning",
  "workspaces": [
    "packages/examples/*"
  ],
  "main": "core/index.js",
  "module": "core/index.js",
  "types": "core/types.js",
  "sideEffects": false,
  "scripts": {
    "dev": "lerna run dev --stream",
    "build": "lerna run build --stream",
    "test": "lerna run test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint packages/*/src/**/*.js",
    "format": "prettier --write \"packages/*/src/**/*.js\"",
    "benchmark": "node benchmark/index.js",
    "demo": "vite demo",
    "lerna": "lerna",
    "sync:lwc": "bash scripts/sync-lwc-core.sh",
    "deploy:lwc": "npm run sync:lwc && cd packages/examples/lwc-ui && sfdx force:source:deploy -p force-app"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./month-view": "./dist/views/month.esm.js",
    "./week-view": "./dist/views/week.esm.js",
    "./day-view": "./dist/views/day.esm.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thedhanawada/lightning-calendar-core.git"
  },
  "keywords": [
    "calendar",
    "salesforce",
    "lightning",
    "lwc",
    "locker-service",
    "accessible",
    "lightweight",
    "scheduler"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thedhanawada/lightning-calendar-core/issues"
  },
  "homepage": "https://github.com/thedhanawada/lightning-calendar-core#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^9.0.3",
    "prettier": "^3.0.3",
    "rollup": "^4.54.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
