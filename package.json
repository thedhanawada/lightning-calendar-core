{
  "name": "@forcecalendar/core",
  "version": "1.1.0",
  "type": "module",
  "private": false,
  "description": "A modern, lightweight, framework-agnostic calendar engine optimized for Salesforce",
  "main": "core/index.js",
  "module": "core/index.js",
  "types": "core/types.js",
  "sideEffects": false,
  "scripts": {
    "test": "node tests/run-all.js",
    "test:ics": "node tests/integration/test-ics.js",
    "test:search": "node tests/integration/test-search.js"
  },
  "exports": {
    ".": "./core/index.js",
    "./calendar": "./core/calendar/Calendar.js",
    "./events": "./core/events/Event.js",
    "./state": "./core/state/StateManager.js",
    "./search": "./core/search/EventSearch.js",
    "./ics": "./core/ics/ICSHandler.js",
    "./types": "./core/types.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forceCalendar/core.git"
  },
  "keywords": [
    "calendar",
    "salesforce",
    "force",
    "apex",
    "lwc",
    "locker-service",
    "accessible",
    "lightweight",
    "scheduler"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/forceCalendar/core/issues"
  },
  "homepage": "https://github.com/forceCalendar/core#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^9.0.3",
    "prettier": "^3.0.3",
    "rollup": "^4.54.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "files": [
    "core/**/*.js",
    "!core/**/*.test.js",
    "!core/**/*.spec.js",
    "README.md",
    "LICENSE"
  ]
}
